# 1️⃣ Usar una imagen de Maven con JDK 21 para compilar
FROM maven:3.9.6-eclipse-temurin-21 AS build
WORKDIR /app
COPY backend/ .
RUN mvn clean package -DskipTests

# 2️⃣ Crear una imagen final optimizada con OpenJDK 21
FROM openjdk:21
WORKDIR /app
COPY --from=build /app/target/*.jar backend.jar
EXPOSE 8080
CMD ["java", "-jar", "backend.jar"]
